<!DOCTYPE html>
<html lang="en">
<head>
    <title>Welcome to Handy Guy Billing Buddy</title>
   <% include ./partials/head %>
   
</head>
<!-- LOGIN FORM -->
<body data-vide-bg = "/public/bg-video/ocean">
  <div id="wrapper">
     <div class="container-fluid">
            <div class="row vertical-offset-100">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-body">

                        <form accept-charset="UTF-8" role="form" action="/login" method="post">
                        <div class="row">
                            <img src="/public/img/logo_full.png" class="img-responsive pull-right" alt="HandyGuy Logo" width="150" height= automatic > 
                        </div>
                    <fieldset>
                        <!-- Error Message if wrong Password -->
                        <% if (message.length > 0) 
                            { %>
                            <div class="alert alert-dismissible alert-danger">
                                <button type="button" class="close" data-dismiss="alert">Ã—</button>
                                    <%= message %>  
                            </div>
                            <% } 
                         %>
                        <!-- Error Message ends if wrong Password -->
                        <div class="form-group">
                            <legend class ="text-center"><i class="material-icons md-48 orange600">account_circle</i><h3>Sign In </h3></legend>
                            <label for="inputEmail label-floating" class="col-md-2 control-label">Email</label>
                      <div class="col-md-10">
                        <input type="email" class="form-control" id="email" name="email" autocomplete="on">
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="inputPassword label-floating" class="col-md-2 control-label">Password</label>

                      <div class="col-md-10">
                        <input type="password" class="form-control" id="password" name="password" autocomplete="on">
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <div class="togglebutton">
                        <label>
                            <input type="checkbox" name="remember" checked> Remember
                        </label>
                        <input class="btn btn-lg btn-success btn-block" type="submit" value="login">
                        <p class="text-right"><a href="#">Forgot password?</a></p>
                        </div>
                    </div>
                    <hr>
                    <div class="form-group text-center">
                        <p><a href="/signup" class="btn btn-primary btn-lg">Create new account for FREE</a></p>
                    </div> 
                    </fieldset>
                    </form>
                </div>
          
            </div> <!-- pannel -->
            </div> <!-- col-offset -->
        </div><!-- row -->
   </div> <!--container -->
  </div> <!-- wrapper -->

<!-- Scripts -->
<% include ./partials/scriptsloader %>
<!-- Video Pluggin -->
<script src="/public/js/pluggins/jquery.vide.js"></script>

</body>
</html>
