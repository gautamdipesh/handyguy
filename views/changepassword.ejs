<!DOCTYPE html>
<html lang="en">
<head>
    <title>Change Password</title>
   <% include ./partials/head %>

</head>

<body>
  <div id="wrapper">
  <% include ./partials/navbar %>
      <div class="container-fluid">
            <div class="row vertical-offset-100">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-body">

                        <form accept-charset="UTF-8" role="form" action="/changepassword" method="post" id="changepasswordform" data-toggle="validator">
                        <div class="row">
                            <img src="/public/img/logo_full.png" class="img-responsive pull-right" alt="HandyGuy Logo" width="150" height= automatic > 
                        </div>
                    <fieldset>
                    <div class="form-group">
                      <label for="currentPassword label-floating" class="col-md-2 control-label">New Password:</label>

                      <div class="col-md-10">
                        <input type="password" class="form-control" id="newPassword" name="newPassword" autocomplete="off" data-minlength="6" autocomplete="off" required>
                        <div class="help-block">Minimum of 6 characters</div>
                      </div>
                    </div>

                    <div class="form-group">
                      <label for="confirmPassword label-floating" class="col-md-2 control-label">Confirm Password:</label>

                      <div class="col-md-10">
                        <input type="password" class="form-control" id="confirmPassword" name="password" autocomplete="off" data-minlength="6" required data-match="#newPassword" data-match-error="Whoops, these don't match" autocomplete="off" required>
                          <div class="help-block">Minimum of 6 characters
                          <hr>
                          </div>
                        </div>
                        <div class="form-group text-center">
                            <input class="btn btn-lg btn-success btn-block" type="submit" value="submit">
                        </div>
                    </div>
                    </fieldset>
                    </form>
                </div><!-- pannel body -->
            </div> <!-- pannel -->
            </div> <!-- col-offset -->
        </div><!-- row -->
    </div><!-- container -->
  </div> <!-- wrapper -->


<!-- Scripts -->
<% include ./partials/scriptsloader %>
</body>
</html>
